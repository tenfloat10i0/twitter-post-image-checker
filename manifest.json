{
	"action": {
		"default_icon": "images/icon.png",
		"default_popup": "pages/popup.html"
	},
	"description": "twitterにて投稿予定画像のコントラストを一時的に変更し、映り込みを確認する拡張機能です。",
	"manifest_version": 3,
	"name": "twitter post image checker",
	"background": {
        "service_worker": "scripts/serviceWorker.js"
    },
	"permissions":["tabs","declarativeContent","scripting"],
	"short_name": "image checker",
	"host_permissions": ["http://twitter.com/*", "https://twitter.com/*" ,"http://x.com/*", "https://x.com/*"],
	"version": "1.0"
}